        maior = compare;
    end;								//conclusão do bloco if

    compare = 1 e * c / taxaEP / 1 p;

    if (!maior>compare && maior < compare)					
    then								
        print(maior);					//impressão no terminal da variável maior
    else    							
        print(compare);
