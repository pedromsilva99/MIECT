    euro a = 50000 e;            	//criação da variável a e inicialização  
    dollar b = 40000 d;
    unit c = 7500000 centP;			
    euro compare;
    euro maior;

    compare = 1 e * b * taxaDE / 1 d;

    if (a>compare)						//bloco if
    then								//inicialização do bloco if
